<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <software.unf.dk.sheepster.CanvasView
        android:id="@+id/lvl1Sheep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/backButton2"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44sp"
        android:layout_marginLeft="39sp"
        android:layout_marginStart="39sp"
        android:background="@drawable/woodbutton"
        android:onClick="backButton"
        android:text="Back" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55sp"
        android:text="Sheeps:"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/fence"
        android:layout_width="210sp"
        android:layout_height="210sp"
        android:layout_above="@+id/backButton2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fence"
        android:visibility="visible"
        app:srcCompat="@drawable/fence" />


    <TextView
        android:id="@+id/clickCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55sp"
        android:text="0"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/backTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/backButton2"
        android:layout_alignRight="@+id/backButton2"
        android:layout_alignTop="@+id/backButton2"
        android:layout_marginEnd="17sp"
        android:layout_marginRight="17sp"
        android:text="Back"
        android:textSize="25sp"/>

</RelativeLayout>


