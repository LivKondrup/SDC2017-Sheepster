<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <software.unf.dk.sheepster.CanvasView
        android:id="@+id/lvl2Sheep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/countlvl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47sp"
        android:text="0"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/countlvl2"
        android:layout_marginEnd="15sp"
        android:layout_marginRight="15sp"
        android:layout_toLeftOf="@+id/countlvl2"
        android:layout_toStartOf="@+id/countlvl2"
        android:text="Sheeps"
        android:textSize="25sp"/>

    <ImageButton
        android:id="@+id/backButton2"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44sp"
        android:layout_marginLeft="39sp"
        android:layout_marginStart="39sp"
        android:background="@drawable/woodbutton"
        android:onClick="backButton2"
        android:text="Back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/backButton2"
        android:layout_alignRight="@+id/backButton2"
        android:layout_alignEnd="@+id/backButton2"
        android:layout_alignBottom="@+id/backButton2"
        android:layout_alignLeft="@+id/backButton2"
        android:layout_alignStart="@+id/backButton2"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/backTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Back"
            android:textSize="25sp" />
    </RelativeLayout>


    <ImageButton
        android:id="@+id/clickSheep2"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/backButton2"
        android:layout_marginEnd="35sp"
        android:layout_marginRight="35sp"
        android:background="@drawable/woodbutton"
        android:onClick="sheepCountButton2"
        android:text="Sheep" />

    <TextView
        android:id="@+id/sheepTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/clickSheep2"
        android:layout_alignRight="@+id/clickSheep2"
        android:layout_alignTop="@+id/clickSheep2"
        android:layout_marginEnd="17sp"
        android:layout_marginRight="17sp"
        android:text="Sheep"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/fence2"
        android:layout_width="210sp"
        android:layout_height="210sp"
        android:background="@drawable/fence"
        android:visibility="visible"
        app:srcCompat="@drawable/fence"
        android:layout_alignBottom="@+id/sheepTextView2"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="14sp" />

    <Button
        android:id="@+id/gameOverTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/countlvl2"
        android:layout_toEndOf="@+id/fence2"
        android:layout_toRightOf="@+id/fence2"
        android:onClick="hiscoreToMain"
        android:text="Gameover" />

    <TextView
        android:id="@+id/highscoreLvl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000000"
        android:visibility="visible"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/clickSheep2"
        android:layout_toStartOf="@+id/clickSheep2" />

    <ImageView
        android:id="@+id/firsLifeImageView"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/life"
        app:srcCompat="@drawable/life" />

    <ImageView
        android:id="@+id/secondLifeImageView"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/firsLifeImageView"
        android:background="@drawable/life"
        app:srcCompat="@drawable/life" />

    <ImageView
        android:id="@+id/thirdLifeImageView"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/secondLifeImageView"
        android:background="@drawable/life"
        app:srcCompat="@drawable/life" />


</RelativeLayout>