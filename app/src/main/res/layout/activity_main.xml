<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="software.unf.dk.sheepster.MainActivity">

    <ImageButton
        android:id="@+id/level1"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:background="@drawable/woodbutton"
        android:onClick="tolvl1"
        android:text="Level 1"
        android:layout_marginBottom="88sp"
        android:layout_alignBottom="@+id/button2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:background="@drawable/woodbutton"
        android:onClick="tolvl2"
        android:text="Level 2"
        android:layout_marginBottom="100sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/level1"
        android:layout_alignStart="@+id/level1" />

    <ImageButton
        android:id="@+id/skinselector"
        android:layout_width="500sp"
        android:layout_height="200sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/highscoreTextView"
        android:layout_marginTop="34sp"
        android:background="@drawable/fancyforside"
        android:onClick="skinselector"
        android:text="Skin selector" />

    <TextView
        android:id="@+id/highscoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27sp"
        android:text="Highscore : 0"
        android:textSize="25sp"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lvl2ButtonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true"
        android:text="Level 2"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lvl1ButtonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lvl2ButtonTextView"
        android:layout_alignRight="@+id/lvl2ButtonTextView"
        android:layout_alignTop="@+id/level1"
        android:text="Level 1"
        android:textSize="25sp" />

</RelativeLayout>
